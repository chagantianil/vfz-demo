{
  "name": "Accordion",
  "description": "Accordion container with expandable/collapsible items",
  "group": "Headless",
  "attribute_definition_groups": [
    {
      "id": "content",
      "name": "Content",
      "attribute_definitions": [
        {
          "id": "allowMultiple",
          "name": "Allow Multiple Open",
          "description": "Allow multiple accordion items to be open at once",
          "type": "boolean",
          "default_value": false,
          "required": false
        },
        {
          "id": "defaultIndex",
          "name": "Default Open Index",
          "description": "Index of the accordion item to open by default (0-based). Leave empty for none.",
          "type": "string",
          "required": false
        }
      ]
    },
    {
      "id": "advanced",
      "name": "Advanced Overrides",
      "attribute_definitions": [
        {
          "id": "__containerStyles",
          "name": "Container Style Config",
          "type": "custom",
          "editor_definition": {
            "type": "styles.styleEditor"
          },
          "required": false
        },
        {
          "id": "themeOverrides",
          "name": "Chakra Theme Overrides",
          "type": "custom",
          "editor_definition": {
            "type": "codeeditor.codeeditor",
            "configuration": {
              "language": "javascript-jsx",
              "validateJavascript": true
            }
          },
          "required": false
        }
      ]
    }
  ],
  "region_definitions": [
    {
      "id": "items",
      "name": "Accordion Items",
      "max_components": 20,
      "component_type_inclusions": [
        {"type_id": "headless.accordionItem"}
      ]
    }
  ]
}

