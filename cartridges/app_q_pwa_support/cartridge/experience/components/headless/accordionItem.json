{
  "name": "Accordion Item",
  "description": "An individual accordion item with title and content",
  "group": "Headless",
  "attribute_definition_groups": [
    {
      "id": "content",
      "name": "Content",
      "attribute_definitions": [
        {
          "id": "title",
          "name": "Title",
          "description": "The accordion item header/title",
          "type": "string",
          "required": true
        },
        {
          "id": "content",
          "name": "Content",
          "description": "The content displayed when accordion item is expanded",
          "type": "text",
          "required": true
        },
        {
          "id": "isDisabled",
          "name": "Disabled",
          "description": "Disable this accordion item",
          "type": "boolean",
          "default_value": false,
          "required": false
        }
      ]
    },
    {
      "id": "styling",
      "name": "Styling",
      "attribute_definitions": [
        {
          "id": "icon",
          "name": "Icon",
          "description": "Optional icon to display next to the title",
          "type": "image",
          "required": false
        }
      ]
    },
    {
      "id": "advanced",
      "name": "Advanced Overrides",
      "attribute_definitions": [
        {
          "id": "__containerStyles",
          "name": "Container Style Config",
          "type": "custom",
          "editor_definition": {
            "type": "styles.styleEditor"
          },
          "required": false
        },
        {
          "id": "themeOverrides",
          "name": "Chakra Theme Overrides",
          "type": "custom",
          "editor_definition": {
            "type": "codeeditor.codeeditor",
            "configuration": {
              "language": "javascript-jsx",
              "validateJavascript": true
            }
          },
          "required": false
        }
      ]
    }
  ],
  "region_definitions": []
}

